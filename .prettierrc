{
  "trailingComma": "es5",
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "jsxSingleQuote": true,

  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": ["*.json", "*.yml", "*.md"],
      "options": {
        "useTabs": false,
        "tabWidth": 4
      }
    }
  ]
}
